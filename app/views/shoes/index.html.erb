<section class='shop'>
   <div class="container">
      <div class="col-sm-12">
         <div class="row shoe-text-center">
            <div class=' shoe-user-title'>
               <h3 class='shoe-text-center shoe-text-uppercase'><%=@category%> Shoes</h3>
               <hr>
            </div>
         
         </div>
         <div class="row">
            <% @shoes.each do |shoe|%>
            <div class='col-sm-3 '>

              <%= link_to "/categories/"+@category+"/subcategories/"+@subcategory+"/shoes/"+shoe.sid.to_s do %>
               <div class='picture-info' data-scroll-reveal="wait 0.25s, then enter right and move 40px over 1s">
                  
                  <%= image_tag(shoe.image+".jpg") %>
                  <div class="info">
                     <h4><%= shoe.name%></h4>
                     <span><%= shoe.price%>$</span>
                  </div>
               </div>
               <%end %>


            </div>
            <% end %>
         </div>
      </div>
   </div>
</section>