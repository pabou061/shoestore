<section class='shop' >
 <div class="container">
 <div class="col-sm-12">
 <div class="row shoe-text-center">

      <div class=' shoe-user-title'>
                <h3 class='shoe-text-center shoe-text-uppercase'><%=@category%> Shoes</h3>
                <hr>
            </div>
    </div>

<div class="row">
    

<% @sub.each do |sub|%>
             <div class='col-sm-4 '>
                        <div class='picture-info'>
                            <%= link_to image_tag(sub.image), "subcategories/"+sub.catid.to_s+"/shoes" %>
                            <div class="info">
                                <h4><%= sub.nom %></h4>
                            </div>
                        </div>
                    </div>

          <% end %>
                  
                    </div>

  
 
</div>


    </div>
</section>